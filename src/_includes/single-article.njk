<div class="row">
  {% for article in recentArticles %}
    <div class="col-md-6 g-mb-40">
      <a href="{{ article.data.originalUrl or article.url }}" class="article-card g-bg-white g-pa-20 g-brd-around g-brd-gray-light-v4 g-rounded-5 h-100">
        {% if article.data.cover %}
          <img src="{{ article.data.cover }}" 
               alt="{{ article.data.title_line1 }} {{ article.data.title_line2 }}" 
               class="article-cover">
        {% endif %}

        <h3 class="article-title g-color-gray-dark-v1">
          {% if article.data.title_line1 %}<span>{{ article.data.title_line1 }}</span>{% endif %}
          {% if article.data.title_line2 %}<span>{{ article.data.title_line2 }}</span>{% endif %}
        </h3>

        {% if article.date %}
          <p class="g-color-gray-dark-v4 g-font-size-13 g-mb-15">{{ article.date | dateCN }}</p>
        {% endif %}
      </a>
    </div>
  {% endfor %}
</div>
